@* Views/Frame/Delete.cshtml *@
@* Аналогично Details, но с формой подтверждения удаления. *@

@model QualityControlSystem.Models.Frame

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Frame</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdBatchId)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Batch?.StartDate.ToString() ?? "—")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FrameModel)
        </dt>
        <dd class = "col-sm-10">
            @(Model.FrameModel?.FrameName ?? "—")
        </dd>
        <dt class = "col-sm-2">
            System Mark
        </dt>
        <dd class = "col-sm-10">
            @(Model.SystemMark?.FinalMarkName ?? "—")
        </dd>
        <dt class = "col-sm-2">
            Expert Mark
        </dt>
        <dd class = "col-sm-10">
            @(Model.ExpertMark?.FinalMarkName ?? "—")
        </dd>
        <dt class = "col-sm-2">
            Final Mark
        </dt>
        <dd class = "col-sm-10">
            @(Model.FinalMark?.FinalMarkName ?? "—")
        </dd>
        <dt class = "col-sm-2">
            Visual Params (JSON)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.VisualJson
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FrameId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>