@model QualityControlSystem.Models.ProductionBatch

@{
    ViewData["Title"] = "Детали партии";
}

<h1>Детали партии #@Model.ProductionBatchId</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Дата начала</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.StartDate)</dd>

        <dt class="col-sm-3">Дата окончания</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EndDate)</dd>

        <dt class="col-sm-3">Статус</dt>
        <dd class="col-sm-9">@(Model.BatchStatus?.StatusName ?? "—")</dd>

        <dt class="col-sm-3">Рекомендации эксперта</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Recom)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductionBatchId" class="btn btn-warning">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>