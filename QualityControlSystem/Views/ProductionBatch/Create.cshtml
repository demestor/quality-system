@model QualityControlSystem.Models.ProductionBatch

@{
    ViewData["Title"] = "Создать новую партию";
}

<h1>Создать новую партию</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BatchStatusId" class="control-label"></label>
                <select asp-for="BatchStatusId" class="form-control" asp-items="ViewBag.BatchStatusId"></select>
                <span asp-validation-for="BatchStatusId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Recom" class="control-label"></label>
                <textarea asp-for="Recom" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Recom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}